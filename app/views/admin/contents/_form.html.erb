<div class="container">
  <div class="row">  
    <%= form_with model: [:admin, @content] do |f| %>
      <div class="mb-3">
        <%= f.label :title %>
        <div class="col-sm-10">
          <%= f.text_field :title %>
        </div>  
      </div>
      <div class="mb-3">
        <%= f.label :slug %>
        <div class="col-sm-10">
          <%= f.text_field :slug %>
        </div>  
      </div>
      <div class="mb-3">
        <%= f.label :excerpt %>
        <div class="col-sm-10">
          <%= f.text_area :excerpt %>
        </div>  
      </div>
      <div class="mb-3">
        <%= f.label :content %>
        <div class="col-sm-10">
          <%= f.text_area :content %>
        </div>  
      </div>
      <div class="mb-3">
        <%= f.label :ui_type %>
        <div class="col-sm-10">
          <%= f.text_field :ui_type %>
        </div>  
      </div>
      <div class="mb-3">
        <%= f.label :hover_button_type %>
        <div class="col-sm-10">
          <%= f.text_field :hover_button_type %>
        </div>  
      </div>
      <div class="mb-3">
        <label class="checkbox" for="menu_visibility">
          <%= f.check_box :menu_visibility %> Menu Visibility
        </label>
      </div>
      <div class="mb-3">
        <%= f.label :thumbmedia_url %>
        <div class="col-sm-10">
          <%= f.text_field :thumbmedia_url %>
        <div>  
      </div>
      <div class="mb-3 btn">
        <%= f.submit %>
      </div>
      <%= link_to 'Go Back', admin_contents_path %>
    <% end %>
  </div>
</div>    